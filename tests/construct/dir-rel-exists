{
    my $wd = tempd;
    my $path = "foo";
    path($path)->mkpath;

    $result = timethese(
        $count,
        {
            'Path::Tiny'  => sub { path($path) },
            'Path::Class' => sub { dir($path) },
            'IO::All'     => sub { io($path) },
            'File::Fu'    => sub { File::Fu->dir($path) },
        },
        "none"
    );
}
